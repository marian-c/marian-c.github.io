{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Retro Assembler (Gameboy)",
    "patterns": [
        {
            "include": "#strings"
        },
        {
            "include": "#characters"
        },
        {
            "include": "#locallabels"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#instructions"
        },
        {
            "include": "#instructionsother"
        },
        {
            "include": "#registers"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "strings": {
            "name": "string.quoted.double.retroasm_gameboy",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.retroasm_gameboy",
                    "match": "\\\\."
                }
            ]
        },
        "characters": {
            "patterns": [
                {
                    "name": "string.quoted.single.retroasm_gameboy",
                    "match": "(?i)\\'.\\'"
                }
            ]
        },
        "locallabels": {
            "patterns": [
                {
                    "name": "keyword.locallabel.retroasm_gameboy",
                    "match": "(?i)\\@+[a-z0-9]+\\b"
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "name": "keyword.directive.retroasm_gameboy",
                    "match": "(?i)(?:^|\\s)(\\.(org|pc|equ|var|random|rnd|storage|ds|fill|align|target|format|cpu|closelabels|breakpoint|print|debug|error|end|region|endregion|function|endfunction|endf|segment|code|lib|data|bss|bank|namespace|include|incbin|macro|endmacro|endm|if|endif|loop|endloop|endl|while|endwhile|endw|break|byte|b|word|w|dword|dw|lobyte|hibyte|loword|hiword|encoding|text|t|textz|stext|ascii|asciiz|generate|memory|memorydump|setting))\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.keyword.retroasm_gameboy",
                    "match": "(?i)\\b(auto|true|false)\\b"
                }
            ]
        },
        "instructions": {
            "patterns": [
                {
                    "name": "keyword.instruction.retroasm_gameboy",
                    "match": "(?i)[\\s]*\\b(adc|add|and|bit|call|ccf|cp|cpl|daa|dec|di|ei|halt|inc|jp|jr|ld|ldd|ldh|ldhl|ldi|lr|nop|or|pop|push|res|ret|reti|rla|rlc|rlca|rr|rra|rrc|rrca|rst|sbc|scf|set|sla|sra|srl|stop|sub|swap|xor)\\b"
                }
            ]
        },
        "instructionsother": {
            "patterns": [
                {
                    "name": "keyword.instructionother.retroasm_gameboy",
                    "match": "(?i)[\\s]*\\b(ex)\\b"
                }
            ]
        },
        "registers": {
            "patterns": [
                {
                    "name": "keyword.register.retroasm_gameboy",
                    "match": "(?i)\\b(a|b|c|d|e|h|l|af|bc|de|hl|hld|hli|sp|nc|z|nz)\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.retroasm_gameboy",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "comment": "Block comment"
                },
                {
                    "name": "comment.line.retroasm_gameboy",
                    "begin": "//",
                    "end": "$",
                    "comment": "Single line comment with //"
                },
                {
                    "name": "comment.line.retroasm_gameboy",
                    "begin": ";",
                    "end": "$",
                    "comment": "Single line comment with ';'"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "include": "#constants-numeric"
                }
            ]
        },
        "constants-numeric": {
            "patterns": [
                {
                    "name": "constant.numeric.binary.retroasm_gameboy",
                    "match": "(?i)(\\%|0b)[0-1_]+\\b",
                    "comment": "Integer literal (binary)"
                },
                {
                    "name": "constant.numeric.hexadecimal.retroasm_gameboy",
                    "match": "(?i)(\\$|0x)[0-9a-f_]+\\b",
                    "comment": "Integer literal (hexadecimal)"
                },
                {
                    "name": "constant.numeric.octal.retroasm_gameboy",
                    "match": "(?i)(0o)[0-7]+\\b",
                    "comment": "Integer literal (octal)"
                },
                {
                    "name": "constant.numeric.decimal.retroasm_gameboy",
                    "match": "(?i)\\b[0-9]+\\b",
                    "comment": "Integer literal (decimal)"
                },
                {
                    "name": "constant.numeric.hash.retroasm_gameboy",
                    "match": "\\#",
                    "comment": "Hash"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.retroasm_gameboy",
                    "match": "(?i)(\\+|\\-|\\=|\\*|\\/|\\!|\\<|\\>|\\&|\\||\\^|\\(|\\)|\\[|\\]\\,)"
                }
            ]
        }
    },
    "scopeName": "source.retroasm_gameboy"
}